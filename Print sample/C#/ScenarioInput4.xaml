<local:BasePrintPage
    x:Class="PrintSample.ScenarioInput4"
    xmlns:local="using:PrintSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel>
        <Canvas x:Name="printingRoot" Opacity="0"/>
        <TextBlock TextWrapping="Wrap" Style="{StaticResource DescriptionTextStyle}" MaxWidth="650">
            <Run Text="Apps can choose to customize print experience by adding app specific options."/>
            <LineBreak/>
            <Run Text="Apps may choose to use a custom print template to handle the preview or print layout changes based on the app options."/>
        </TextBlock>
    </StackPanel>
</local:BasePrintPage>