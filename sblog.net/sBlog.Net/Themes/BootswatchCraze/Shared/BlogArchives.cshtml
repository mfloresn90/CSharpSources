@using System.Globalization
@model ArchiveCollection

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">archives</h3>
    </div>
    <div class="list-group">
        @foreach (Archive archive in Model)
        {
            var url = Url.RouteUrl("PostByYearMonth", new { year = archive.Year, month = archive.Month });
            <a class="list-group-item" href="@url" title="@archive.MonthYear">@string.Format("{0} {1}", DateTimeFormatInfo.CurrentInfo.GetAbbreviatedMonthName(int.Parse(archive.Month)), archive.Year)</a>
        }
    </div>
</div>
