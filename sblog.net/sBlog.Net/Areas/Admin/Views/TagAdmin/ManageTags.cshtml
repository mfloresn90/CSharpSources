@model sBlog.Net.Areas.Admin.Models.AdminTagsViewModel

@{
    ViewBag.Title = string.Format("Manage Tags || {0}", Model.Title);
}

<div id="left" style="float: left; width: 20%; padding: 5px;">
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add a Tag</h3>
      </div>
      <div class="panel-body">
        <input type="text" class="inputBoxBigCategory" id="txtTag" name="txtTag" size="20" /><br /><br />
        <p class="pull-right">
            <input type="button" class="btn btn-primary" id="btnCreateTags" value="Add Tag" />
        </p>
        <br /><br />
        <span class="add-msg"></span>        
      </div>
    </div>
</div>
<div id="right" style="float: left; width: 60%; padding-left: 20px">
    <table class="table table-striped" id="manage-table">
        <thead>
            <tr>
                <th>Tag Name</th>
                <th>Tag Slug</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tag in Model.Tags)
            {
                @Html.Partial("Tag", tag)
            }
        </tbody>
    </table>
    
    <ul class="pagination">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("ManageTags", new { page = x }))
    </ul>
    @Html.HiddenFor(model => Model.OneTimeCode)
</div>
